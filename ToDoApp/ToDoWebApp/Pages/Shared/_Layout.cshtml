<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    @* Bootstrap stylesheet (brugt i Vue-komponenter) *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css" />
    
    @* Vue-relaterede stylesheets *@
    <link rel="stylesheet" href="~/css/todo.component.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
</head>
<body>

@* Generings af sideindhold (Index.cshtml som udgangspunkt for / og /Index ) *@
@RenderBody()

@* Vue version til Udvikling/Produktion jævnfør ASPNETCORE_ENVIRONMENT i launchSettings.json *@
<environment exclude="Development">
<script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
</environment>
<environment names="Development">
<script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
</environment>
    
@* Vue Html skabeloner *@
@await Html.PartialAsync("~/Pages/templates/todo.component.cshtml")

@* Vue Javascript delte metode(r), komponent(er) og app-initialisering *@
<script src="~/js/mixin.js" asp-append-version="true"></script>
<script src="~/js/todo.component.js" asp-append-version="true"></script>
<script src="~/js/app.js" asp-append-version="true"></script>

<environment names="Development">
@* Automatisk sideopdatering *@
@await RenderSectionAsync("Scripts", required: false)
</environment>

</body>
</html>