<template id="todo-component">
    <div class="todo-container">
        <h1>{{getLabel('title')}}</h1>
        <div class="languages">
            <!--
        https://flagicons.lipis.dev/
        -->
            <svg @@click="setLanguage('da')"
                 xmlns="http://www.w3.org/2000/svg" class="flag-icons flag-icons-dk" viewBox="0 0 640 480">
                <path fill="#c8102e" d="M0 0h640.1v480H0z" />
                <path fill="#fff" d="M205.7 0h68.6v480h-68.6z" />
                <path fill="#fff" d="M0 205.7h640.1v68.6H0z" />
            </svg>
            <svg @@click="setLanguage('en')"
                 xmlns="http://www.w3.org/2000/svg" class="flag-icons flag-icons-gb" viewBox="0 0 640 480">
                <path fill="#012169" d="M0 0h640v480H0z" />
                <path fill="#FFF" d="m75 0 244 181L562 0h78v62L400 241l240 178v61h-80L320 301 81 480H0v-60l239-178L0 64V0h75z" />
                <path fill="#C8102E" d="m424 281 216 159v40L369 281h55zm-184 20 6 35L54 480H0l240-179zM640 0v3L391 191l2-44L590 0h50zM0 0l239 176h-60L0 42V0z" />
                <path fill="#FFF" d="M241 0v480h160V0H241zM0 160v160h640V160H0z" />
                <path fill="#C8102E" d="M0 193v96h640v-96H0zM273 0v480h96V0h-96z" />
            </svg>
        </div>
        <div>
            <label for="statusDone">{{getLabel('status')}}</label>
            <select id="statusDone" v-model="todoDoneStatus">
                <option :value="undefined">{{getLabel('statusAll')}}</option>
                <option :value="true">{{getLabel('statusDone')}}</option>
                <option :value="false">{{getLabel('statusNotDone')}}</option>
            </select>
        </div>
        <div v-if="todos" class="todos" ref="todos">
            <div v-for="(todo, index) in todos" class="todo" :style="{ 'display': (todo.hide ? 'none' : 'flex')  }">
                <input type="checkbox" :key="`todo_${index}`" v-model="todo.done" @@click="updateToDo(todo)" />
                <span :class="{ 'todoDone': todo.done }">{{todo.value}}</span>
                <span class="btn mybutton remove" @@click="removeTodo(todo.id)">{{getLabel('remove')}}</span>
            </div>
        </div>
        <div class="addTodoContainer">
            <input class="add" ref="newTodo" :placeholder="getLabel('writeNewTodo')" />
            <span class="btn mybutton add" @@click="addToDo">{{getLabel('add')}}</span>
        </div>
        <div class="errorMessage" v-if="errorMessages">{{errorMessages}}</div>
    </div>
</template>